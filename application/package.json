{
  "name": "shortener",
  "version": "1.0.0",
  "description": "a simple url shortener",
  "main": "index.js",
  "scripts": {
    "deploy-build-image": "docker build -t shortener . --platform=linux/amd64",
    "deploy-authenticate": "docker login",
    "deploy-tag": "docker tag shortener:latest ibudasov/shortener:latest",
    "deploy-push": "docker push ibudasov/shortener:latest",
    "deploy": "npm run deploy-build-image && npm run deploy-authenticate && npm run deploy-tag && npm run deploy-push",
    "start": "NODE_PATH=./build node build/index.js",
    "build": "tsc -p .",
    "dev": "nodemon src/index.ts"
  },
  "author": "igor.budasov@icloud.com",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-prom-bundle": "^7.0.0",
    "prom-client": "^15.1.0"
  }
}
